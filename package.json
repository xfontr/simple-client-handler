{
  "name": "simple-client-handler",
  "description": "Simple client handler",
  "version": "0.0.1",
  "main": "build/index.js",
  "author": "Xifr√© Font",
  "license": "MIT",
  "scripts": {
    "start": "node .",
    "build": "rimraf build && tsc",
    "dev": "clear && nodemon -q --watch src --exec node --loader ts-node/esm --inspect src/index.ts | npm run pretty-log",
    "dev:verbose": "clear && nodemon --watch src --exec node --loader ts-node/esm --inspect src/index.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint \"**/*.{ts}\"",
    "format": "prettier . --write",
    "pretty-log": "pino-pretty"
  },
  "devDependencies": {
    "@types/jest": "^29.5.3",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "eslint": "^8.45.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-config-xo": "^0.43.1",
    "eslint-config-xo-typescript": "^1.0.0",
    "eslint-plugin-jest": "^27.2.3",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "pino-pretty": "^10.0.1",
    "prettier": "3.0.0",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "dependencies": {
    "pino": "^8.14.1"
  }
}
